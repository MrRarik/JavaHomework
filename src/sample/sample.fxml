<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="272.0" prefWidth="385.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <TextArea fx:id="textArea" stylesheets="@../style.css" VBox.vgrow="ALWAYS">
      <font>
         <Font name="System Italic" size="12.0" />
      </font>
    </TextArea>

    <HBox>
        <TextField fx:id="textFiled" onAction="#enterMSG" promptText="Введи текст" HBox.hgrow="ALWAYS" />
        <Button onAction="#enterMSG" text="Enter" />
    </HBox>

</VBox>
